---
import { createDb } from "@/db";
import getProjectsStore from "@/stores/project-store";
import AppLayout from "@/layouts/app-layout.astro";
import RootLayout from "@/layouts/root-layout.astro";
import MarkdownLayout from "@/layouts/markdown-layout.astro";
import ProjectCard from "@/components/project-card";
import SearchBar from "@/components/search-bar";
import { Button } from "@radix-ui/themes";
import { PlusIcon } from "lucide-react";

const db = createDb(Astro.locals.runtime.env);
const userId = Astro.locals.user?.id;
if (!userId) return Astro.redirect("/welcome");

const search = Astro.url.searchParams.get("search") ?? undefined;

const projectsStore = getProjectsStore(db, userId);
const projects = await projectsStore.getAll(search);
---

<RootLayout>
  <AppLayout>
    <MarkdownLayout>
      <h1>
        <div class="flex items-center justify-between">
          Projects
          <div class="flex items-center gap-3">
            <SearchBar search={search} pathname={Astro.url.pathname} />
            <a href="/projects/add">
              <Button variant="surface">
                <PlusIcon className="size-4" />
                Add Project
              </Button>
            </a>
          </div>
        </div>
      </h1>
      <p>Click on a project to see details and messages</p>
    </MarkdownLayout>
    <div
      class="grid gap-4 grid-cols-[repeat(auto-fit,_minmax(250px,1fr))] py-4"
    >
      {projects.map((project) => <ProjectCard project={project} />)}
    </div>
  </AppLayout>
</RootLayout>
