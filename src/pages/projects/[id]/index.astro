---
import { createDb } from "@/db";
import getProjectsStore from "@/stores/project-store";
import AppLayout from "@/layouts/app-layout.astro";
import RootLayout from "@/layouts/root-layout.astro";
import MarkdownLayout from "@/layouts/markdown-layout.astro";
import { Button } from "@radix-ui/themes";
import { Edit3Icon } from "lucide-react";

const { id } = Astro.params;
if (!id) return Astro.redirect("/projects");

const db = createDb(Astro.locals.runtime.env);
const userId = Astro.locals.user?.id;
if (!userId) return Astro.redirect("/welcome");

const projectsStore = getProjectsStore(db, userId);
const project = await projectsStore.getOne(id);
if (!project) return Astro.redirect("/projects");
---

<RootLayout>
  <AppLayout>
    <MarkdownLayout>
      <h1>
        <div class="flex items-center justify-between">
          {project.name}
          <a href={`/projects/${project.id}/edit`}>
            <Button variant="surface">
              <Edit3Icon className="size-4" />
              Edit Project
            </Button>
          </a>
        </div>
      </h1>
      <p>{project.description}</p>
    </MarkdownLayout>
  </AppLayout>
</RootLayout>
